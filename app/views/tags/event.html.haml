- set_meta_tags title: "#{@tag.text}#{@event.txt}｜メンバー募集サイト",keywords: "#{@event.name},#{@tag.name},サークル,チーム",og: {image:image_url("/images/events/#{@event.ruby}.jpg")}
= render "users/parts/local_business_user_list"
.main.users-index
  .container
    = render "/layouts/breadcrumb"
    .e_header_wrap
      %img{:alt => "#{@event.name}", :src => "/images/events/#{@event.ruby}.jpg"}/
      .link_txt
        %h1.e_header_title
          = @tag.text
          = @event.txt
    = render "/users/search"
    - if @users.count != 0
      = render "/users/users_list"
    - else @users.count == 0
      = render "/tags/no_hit"
