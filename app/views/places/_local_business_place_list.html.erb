<% if @places.present? %>

  <script type="application/ld+json">
  {
    "@context":"http://schema.org",
    "@type":"ItemList",
    "itemListElement":[
    <% @places.each.with_index(1) do |place, i| %>
      <%= "," if i > 1 %>{
        "@type":"ListItem",
        "position":<%= i %>,
        "url":"https://circle-book.com/places/<%= @event.ruby %>/<%= place.prefecture.kana %>/<%= place.city.city_kana %>/<%= place.id %>"
      }
    <% break if i == 10 %>
    <% end %>
    ]
  }
  </script>

<% end %>