%ul.review_set
  %li.star_wrap
    - if review_score >= 4.5
      / 5.0
      %span.star
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
    - elsif review_score >= 3.5
      / 4.0
      %span.star
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.gray
    - elsif review_score >= 2.5
      / 3.0
      %span.star
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
    - elsif review_score >= 1.5
      / 2.0
      %span.star
        %i.fa.fa-star.orange
        %i.fa.fa-star.orange
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
    - elsif review_score >= 0.5
      / 1.0
      %span.star
        %i.fa.fa-star.orange
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
    - else
      / 0
      %span.star
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
        %i.fa.fa-star.gray
  %li.review_score= sprintf("%.2f", review_score )
